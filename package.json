    "bin": {
        "tersa": "bin/tersa.js"
    },
    "scripts": {
        "build:cli:tsc": "tsc --incremental --p src/node",
        "build:playground:node": "tersa build --srcDir playground/src/node --destDir playground/dist/node --entrypoint playground/dist/node/index.js",
        "start": "yarn run build:cli:tsc && yarn run watch:playground:node",
        "watch:playground:node": "tersa watch --srcDir playground/src/node --destDir playground/dist/node --entrypoint playground/dist/node/index.js"
    },
    "dependencies": {
        "@babel/cli": "^7.10.5",
        "@babel/core": "^7.10.5",
        "@babel/node": "^7.10.5",
        "@babel/parser": "^7.11.0",
        "@babel/plugin-syntax-dynamic-import": "^7.8.3",
        "@babel/plugin-transform-arrow-functions": "^7.10.4",
        "@babel/plugin-transform-runtime": "^7.10.5",
        "@babel/plugin-transform-typescript": "^7.11.0",
        "@babel/preset-env": "^7.10.4",
        "@babel/preset-typescript": "^7.10.4",
        "@babel/runtime": "^7.11.0",
        "@types/express": "^4.17.7",
        "@types/yargs": "^15.0.5",
        "babel-loader": "^8.1.0",
        "chokidar": "^3.4.1",
        "concurrently": "^5.2.0",
        "core-js": "^3.6.5",
        "core-js-compat": "^3.6.5",
        "express": "^4.17.1",
        "file-loader": "^6.0.0",
        "fs-extra": "^9.0.1",
