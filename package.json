        "resolve": "^1.17.0",
        "typescript": "^3.9.7",
        "vite": "^1.0.0-rc.4",
        "webpack": "^4.44.1",
        "webpack-bundle-analyzer": "^3.8.0",
        "webpack-cli": "^3.3.12",
        "webpack-node-externals": "^2.5.0",
        "yargs": "^15.4.1"
    },
    "devDependencies": {}
}
